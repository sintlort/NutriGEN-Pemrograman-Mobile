<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="true"

    android:background="@drawable/bgg"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="275dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:fontFamily="monospace"
        android:text="Kebutuhan Gizi"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="276dp"
        android:layout_height="57dp"
        android:layout_marginTop="104dp"
        android:fontFamily="monospace"
        android:text="Kebutuhan Gizi Seorang Berubah - ubah Seiring dengan pertumbuhannya"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonbalita"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="188dp"

        android:background="@drawable/balita"
        android:fontFamily="sans-serif-black"
        android:text="    BALITA"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5" />


    <Button
        android:id="@+id/buttonanak"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/anakanak"
        android:fontFamily="sans-serif-black"
        android:text="            ANAK ANAK"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonbalita" />

    <Button
        android:id="@+id/buttonremaja"
        android:layout_width="185dp"
        android:layout_height="61dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/remaja"
        android:fontFamily="sans-serif-black"
        android:text="      Remaja"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonanak" />

    <Button
        android:id="@+id/buttondewasa"
        android:layout_width="185dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/dewasa"
        android:fontFamily="sans-serif-black"
        android:text="       Dewasa"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonremaja" />




</androidx.constraintlayout.widget.ConstraintLayout>
